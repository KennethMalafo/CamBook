<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    tools:context=".user_profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/arrow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="35dp"
            android:background="#00ffffff"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/back_button" />

        <ImageButton
            android:id="@+id/profile_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/arrow1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:background="#00ffffff"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/profile_pic" />

        <TextView
            android:id="@+id/fname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_pic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/intersemibold"
            android:text="Full Name mo"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/edit"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fname"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/curve2"
            android:fontFamily="@font/intermedium"
            android:text="Edit Profile"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/infotxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/intersemibold"
            android:text="Personal Information "
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/line"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/infotxt"
            android:layout_centerHorizontal="true"
            android:src="@drawable/line_17"/>

        <TextView
            android:id="@+id/username_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:layout_marginTop="5dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:fontFamily="@font/intermedium"
            android:text="Username:"
            android:textSize="16sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username_txt"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/intermedium"
            android:text="Your Username"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/line2"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:layout_centerHorizontal="true"
            android:src="@drawable/line_17"/>

        <TextView
            android:id="@+id/province_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line2"
            android:layout_marginTop="5dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:fontFamily="@font/intermedium"
            android:text="Province:"
            android:textSize="16sp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/province"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/province_txt"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/intermedium"
            android:text="Your Province"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/line3"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/province"
            android:layout_centerHorizontal="true"
            android:src="@drawable/line_17"/>

        <TextView
            android:id="@+id/city_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line3"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/intermedium"
            android:text="City:"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/city_txt"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="9dp"
            android:fontFamily="@font/intermedium"
            android:text="Your City"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/line4"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/city"
            android:layout_centerHorizontal="true"
            android:src="@drawable/line_17"/>

        <TextView
            android:id="@+id/barangay_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line4"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/intermedium"
            android:text="Barangay:"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/barangay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/barangay_txt"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="9dp"
            android:fontFamily="@font/intermedium"
            android:text="Your Barangay"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/line5"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/barangay"
            android:layout_centerHorizontal="true"
            android:src="@drawable/line_17"/>

        <TextView
            android:id="@+id/dob_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line5"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/intermedium"
            android:text="Date of Birth:"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dob_txt"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="9dp"
            android:fontFamily="@font/intermedium"
            android:text="Your Date of Birth"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/line6"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dob"
            android:layout_centerHorizontal="true"
            android:src="@drawable/line_17"/>

        <TextView
            android:id="@+id/gender_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line6"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/intermedium"
            android:text="Gender:"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gender_txt"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="9dp"
            android:fontFamily="@font/intermedium"
            android:text="Your Gender"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/line7"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gender"
            android:layout_centerHorizontal="true"
            android:src="@drawable/line_17"/>

        <TextView
            android:id="@+id/email_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line7"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/intermedium"
            android:text="Email:"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_txt"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="9dp"
            android:fontFamily="@font/intermedium"
            android:text="Your Email"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/line8"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_centerHorizontal="true"
            android:src="@drawable/line_17"/>

        <Button
            android:id="@+id/LogOUT"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line8"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/curve2"
            android:fontFamily="@font/intermedium"
            android:text="Log out"
            android:textColor="@color/white" />

    </RelativeLayout>
    </LinearLayout>
</ScrollView>