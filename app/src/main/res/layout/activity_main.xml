<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/logo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/logo1" />

            <ImageView
                android:id="@+id/logo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo1"
                android:layout_centerHorizontal="true"
                android:src="@drawable/logo2o" />

            <ImageView
                android:id="@+id/pic1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@+id/logo2"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="30dp"
                android:src="@drawable/undraw_camera_re_cnp4" />

            <ImageView
                android:id="@+id/pic2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@+id/logo2"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:src="@drawable/undraw_fashion_photoshoot_mtq8" />

            <ImageView
                android:id="@+id/pic3"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@+id/logo2"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="172dp"
                android:src="@drawable/undraw_product_photography_91i2" />

            <ImageView
                android:id="@+id/pic4"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@+id/logo2"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="169dp"
                android:layout_marginEnd="30dp"
                android:src="@drawable/undraw_photo_session_re_c0cp" />

            <ImageView
                android:id="@+id/pic5"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="130dp"
                android:layout_marginTop="328dp"
                android:layout_marginEnd="130dp"
                android:src="@drawable/undraw_landscape_photographer_blv1" />

            <Button
                android:id="@+id/logIN"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pic4"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:background="@drawable/curve2"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/intersemibold"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:text="@string/log_in"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/create"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logIN"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="35dp"
                android:background="@drawable/curve2"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/intersemibold"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:text="@string/create_new_account"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>