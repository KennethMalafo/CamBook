<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".services">

    <!--services layout-->
    <RelativeLayout
        android:id="@+id/layout_section1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_navigation"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <ImageView
            android:id="@+id/top_pic"
            android:layout_width="450dp"
            android:layout_height="215dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/top_pic" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/top_pic"
            android:layout_alignTop="@+id/top_pic"
            android:layout_marginStart="35dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/small_ep" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/top_pic"
            android:layout_alignTop="@+id/top_pic"
            android:layout_marginStart="130dp"
            android:layout_marginTop="105dp"
            android:fontFamily="@font/interbold"
            android:text="Eging Photography"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_pic"
            android:layout_alignParentStart="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/intersemibold"
            android:text="Service"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/reviews"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_pic"
            android:layout_marginStart="68dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="68dp"
            android:layout_toStartOf="@+id/about"
            android:layout_toEndOf="@+id/service"
            android:fontFamily="@font/intersemibold"
            android:text="Reviews"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_pic"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="35dp"
            android:fontFamily="@font/intersemibold"
            android:text="About"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reviews"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="40dp" />
    </RelativeLayout>

    <!--chat layout-->
    <RelativeLayout
        android:id="@+id/layout_section2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_navigation"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone"/>

    <!--services layout-->
    <RelativeLayout
        android:id="@+id/layout_section3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_navigation"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/profile_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="#00ffffff"
            android:clickable="true"
            android:contentDescription="Profile Image"
            android:focusable="true"
            android:src="@drawable/profile_pic" />

        <TextView
            android:id="@+id/fname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_pic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/intersemibold"
            android:text="Full Name mo"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/edit"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fname"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/curve2"
            android:fontFamily="@font/intermedium"
            android:text="Edit Profile"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/infotxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/intersemibold"
            android:text="Personal Information "
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/line"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/infotxt"
            android:layout_centerHorizontal="true"
            android:src="@drawable/line_17" />

        <TextView
            android:id="@+id/username_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/intermedium"
            android:text="Username:"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/username_txt"
            android:fontFamily="@font/intermedium"
            android:text="Your Username"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/line2"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/username"
            android:layout_centerHorizontal="true"
            android:src="@drawable/line_17" />

        <TextView
            android:id="@+id/province_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/intermedium"
            android:text="Province:"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/province"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line2"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/province_txt"
            android:fontFamily="@font/intermedium"
            android:text="Your Province"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/line3"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/province"
            android:layout_centerHorizontal="true"
            android:src="@drawable/line_17" />

        <TextView
            android:id="@+id/city_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line3"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/intermedium"
            android:text="City:"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line3"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/city_txt"
            android:fontFamily="@font/intermedium"
            android:text="Your City"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/line4"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/city"
            android:layout_centerHorizontal="true"
            android:src="@drawable/line_17" />

        <TextView
            android:id="@+id/barangay_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line4"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/intermedium"
            android:text="Barangay:"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/barangay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line4"
            android:layout_marginStart="-5dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/barangay_txt"
            android:fontFamily="@font/intermedium"
            android:text="Your Barangay"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/line5"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/barangay"
            android:layout_centerHorizontal="true"
            android:src="@drawable/line_17" />

        <TextView
            android:id="@+id/dob_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line5"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/intermedium"
            android:text="Date of Birth:"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/dob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line5"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/dob_txt"
            android:fontFamily="@font/intermedium"
            android:text="Your Date of Birth"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/line6"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dob"
            android:layout_centerHorizontal="true"
            android:src="@drawable/line_17" />

        <TextView
            android:id="@+id/gender_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line6"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/intermedium"
            android:text="Gender:"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line6"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/gender_txt"
            android:fontFamily="@font/intermedium"
            android:text="Your Gender"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/line7"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gender"
            android:layout_centerHorizontal="true"
            android:src="@drawable/line_17" />

        <TextView
            android:id="@+id/email_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line7"
            android:layout_alignParentStart="true"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/intermedium"
            android:text="Email:"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line7"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/email_txt"
            android:fontFamily="@font/intermedium"
            android:text="Your Email"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/line8"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email"
            android:layout_centerHorizontal="true"
            android:src="@drawable/line_17" />

        <Button
            android:id="@+id/LogOUT"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line8"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/curve2"
            android:fontFamily="@font/intermedium"
            android:text="Log out"
            android:textColor="@color/white" />

    </RelativeLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        app:elevation="0dp"
        app:itemIconSize="40dp"
        app:menu="@menu/bottom_nav_menu" />

</RelativeLayout>