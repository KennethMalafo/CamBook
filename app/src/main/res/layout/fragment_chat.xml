<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chatFragment"
    android:background="@drawable/gradient_background">

    <!--chat layout-->
    <RelativeLayout
        android:id="@+id/chat_layout_service"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true">

        <ImageView
            android:id="@+id/ep_logo_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="65dp"
            android:src="@drawable/circle_ep_logo" />

        <TextView
            android:id="@+id/eging_photography"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ep_logo_circle"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/interbold"
            android:text="Eging Photography"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cambook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eging_photography"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/intersemibold"
            android:text="Cambook"
            android:textColor="@color/white_fade"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/star_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cambook"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/intersemibold"
            android:text="You started a chat with Eging Photography"
            android:textColor="@color/white_fade"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/maintenance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/star_txt"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:fontFamily="@font/interbold"
            android:text="Sorry, This Part is still Under Maintenance"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />


    </RelativeLayout>

</RelativeLayout>