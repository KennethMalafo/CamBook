<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".editUserProfileFragment">

    <!--edit_user_profile layout-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/edit_user_profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/arrow1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="35dp"
                android:background="#00ffffff"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="centerCrop"
                android:src="@drawable/back_arrow" />

            <androidx.cardview.widget.CardView
                android:id="@+id/user_profile_pic_container"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/black"
                app:cardCornerRadius="150dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="10dp"
                        app:cardCornerRadius="150dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <ImageButton
                                android:id="@+id/edit_profile_pic"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/white"
                                android:clickable="true"
                                android:contentDescription="Profile Image"
                                android:focusable="true"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:scaleType="centerCrop" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_profile_pic_container"
                android:layout_margin="10dp"
                app:cardBackgroundColor="@color/white_fade"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/infotxt_service"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="40dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/intersemibold"
                        android:text="Personal Information "
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/line_service"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/infotxt_service"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/line_17" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/fname_container_service"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/line_service"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/fname_txt_service"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10dp"
                                android:fontFamily="@font/intermedium"
                                android:text="Full Name:"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/edit_fname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="100dp"
                                android:fontFamily="@font/intersemibold"
                                android:hint="Change Full Name"
                                android:textColorHint="@color/gray"
                                app:boxBackgroundMode="outline"
                                app:boxStrokeColor="@color/black"
                                app:boxStrokeWidth="2dp"
                                app:startIconDrawable="@drawable/fullname_24">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/editFname"
                                    android:layout_width="220dp"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:fontFamily="@font/interregular"
                                    android:paddingStart="10dp" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/username_container_service"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/fname_container_service"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/username_txt_service"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10dp"
                                android:fontFamily="@font/intermedium"
                                android:text="Username:"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/edit_username"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="100dp"
                                android:fontFamily="@font/intermedium"
                                android:hint="Change Username"
                                android:textColorHint="@color/gray"
                                app:boxBackgroundMode="outline"
                                app:boxStrokeColor="@color/black"
                                app:boxStrokeWidth="2dp"
                                app:startIconDrawable="@drawable/username_24">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/editUsername"
                                    android:layout_width="220dp"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:fontFamily="@font/interregular"
                                    android:paddingStart="10dp" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/province_container_service"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/username_container_service"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/province_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10dp"
                                android:fontFamily="@font/intermedium"
                                android:text="Province:"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/edit_province"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="100dp"
                                android:fontFamily="@font/intermedium"
                                android:hint="Change Province"
                                android:textColorHint="@color/gray"
                                app:boxBackgroundMode="outline"
                                app:boxStrokeColor="@color/black"
                                app:boxStrokeWidth="2dp"
                                app:startIconDrawable="@drawable/location_24">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/editProvince"
                                    android:layout_width="220dp"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:fontFamily="@font/interregular"
                                    android:paddingStart="10dp" />

                            </com.google.android.material.textfield.TextInputLayout>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/city_container_service"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/province_container_service"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/city_txt_service"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10dp"
                                android:fontFamily="@font/intermedium"
                                android:text="City:"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/edit_city"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="100dp"
                                android:fontFamily="@font/intermedium"
                                android:hint="Change City"
                                android:textColorHint="@color/gray"
                                app:boxBackgroundMode="outline"
                                app:boxStrokeColor="@color/black"
                                app:boxStrokeWidth="2dp"
                                app:startIconDrawable="@drawable/location_24">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/editCity"
                                    android:layout_width="220dp"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:fontFamily="@font/interregular"
                                    android:paddingStart="10dp" />

                            </com.google.android.material.textfield.TextInputLayout>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/barangay_container_service"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/city_container_service"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/barangay_txt_service"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10dp"
                                android:fontFamily="@font/intermedium"
                                android:text="Barangay:"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/edit_barangay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="100dp"
                                android:fontFamily="@font/intermedium"
                                android:hint="Change Barangay"
                                android:textColorHint="@color/gray"
                                app:boxBackgroundMode="outline"
                                app:boxStrokeColor="@color/black"
                                app:boxStrokeWidth="2dp"
                                app:startIconDrawable="@drawable/location_24">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/editBarangay"
                                    android:layout_width="220dp"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:fontFamily="@font/interregular"
                                    android:paddingStart="10dp" />

                            </com.google.android.material.textfield.TextInputLayout>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/gender_container_service"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/barangay_container_service"
                        android:layout_margin="10dp"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp">

                            <TextView
                                android:id="@+id/gender_txt_service"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginStart="10dp"
                                android:fontFamily="@font/intermedium"
                                android:text="Gender:"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <RadioGroup
                                android:id="@+id/edit_gender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="100dp"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/radio_male"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:background="@drawable/txt_input_custom_outline"
                                    android:padding="10dp"
                                    android:text="@string/male"
                                    android:textColor="@color/gray" />

                                <RadioButton
                                    android:id="@+id/radio_female"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:background="@drawable/txt_input_custom_outline"
                                    android:padding="10dp"
                                    android:text="@string/female"
                                    android:textColor="@color/gray" />
                            </RadioGroup>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/save_profile"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/container"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/curve2"
                android:fontFamily="@font/intermedium"
                android:text="Save Profile"
                android:textColor="@color/white" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>