<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient_background">

    <RelativeLayout
        android:id="@+id/about_layout"
        android:layout_width="wrap_content"
        android:layout_height="1000dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/interbold"
            android:text="Details"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/details"
            android:layout_alignParentStart="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/intermedium"
            android:text="Portrait and Event Photographer"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/email_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt"
            android:layout_alignParentStart="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/email" />

        <TextView
            android:id="@+id/client_gmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt"
            android:layout_marginStart="8dp"
            android:layout_marginTop="35dp"
            android:layout_toEndOf="@+id/email_icon"
            android:fontFamily="@font/interregular"
            android:text="valdezreginald0021@gmail.com"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/fb_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_icon"
            android:layout_alignParentStart="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/facebook" />

        <TextView
            android:id="@+id/client_fb_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/client_gmail"
            android:layout_marginStart="8dp"
            android:layout_marginTop="35dp"
            android:layout_toEndOf="@+id/email_icon"
            android:fontFamily="@font/interregular"
            android:text="Eging photography"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/address_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fb_icon"
            android:layout_alignParentStart="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/placeholder" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/client_fb_group"
            android:layout_marginStart="8dp"
            android:layout_marginTop="35dp"
            android:layout_toEndOf="@+id/email_icon"
            android:fontFamily="@font/interregular"
            android:text="@string/pangasinan"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </RelativeLayout>
</RelativeLayout>