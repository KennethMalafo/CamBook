<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    tools:context=".home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/acctxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="38dp"
            android:layout_marginTop="280dp"
            android:fontFamily="@font/intersemibold"
            android:text="Email Address: "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/Acc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="280dp"
            android:layout_marginEnd="68dp"
            android:layout_toEndOf="@+id/acctxt"
            android:fontFamily="@font/intersemibold"
            android:text="Email mo hehe"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/usernametxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/acctxt"
            android:layout_marginStart="38dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/intersemibold"
            android:text="Username: "
            android:textSize="20sp" />

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/usernametxt"
            android:layout_below="@+id/Acc"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/intersemibold"
            android:text="Username mo hehe"
            android:textSize="20sp" />

        <Button
            android:id="@+id/LogOUT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/curve2"
            android:text="Log out kana boss"
            android:fontFamily="@font/oswaldregular"/>

    </RelativeLayout>
</LinearLayout>